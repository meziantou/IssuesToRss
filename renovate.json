{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": [ ".*" ],
      "groupName": "all dependencies",
      "separateMajorMinor": false,
      "enabled": true,
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": false,
      "ignoreTests": true
    }
  ]
}